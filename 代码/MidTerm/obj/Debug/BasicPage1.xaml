<Page
    x:Name="pageRoot"
    x:Class="MidTerm.BasicPage1"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MidTerm"
    xmlns:common="using:MidTerm.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <x:String x:Key="AppName">My Application</x:String>
    </Page.Resources>

    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid Background="Black">

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="0.3*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="0.3*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="0.3*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="0.3*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="0.3*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="0.3*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.8*"></ColumnDefinition>
            <ColumnDefinition Width="2.5*"></ColumnDefinition>
            <ColumnDefinition Width="0.5*"></ColumnDefinition>
            <ColumnDefinition Width="6*"></ColumnDefinition>
            <ColumnDefinition Width="0.5*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="0.8*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Image Grid.Column="3" Source="Assets/top2.png" Grid.RowSpan="2" Margin="0,0,0,15" Grid.Row="1"/>

        <Image Grid.Row="1" Grid.Column="5"  Grid.RowSpan="13"  Width="360" Source="Assets/tiao.jpg"/>
        <Image Grid.Row="1" Grid.Column="1"  Grid.RowSpan="2" Height="150" Source="Assets/up.png"/>
        <Image Grid.Row="3" Grid.Column="1" Grid.RowSpan="11" Source="Assets/whiteblue.jpg"/>
        <Button Grid.Row="1" Grid.Column="1" x:Name="backButton" Margin="117,20,0,0" Command="{Binding NavigationHelper.GoBackCommand, ElementName=pageRoot}"
                        Style="{StaticResource NavigationBackButtonNormalStyle}"
                        VerticalAlignment="Top"
                        AutomationProperties.Name="Back"
                        AutomationProperties.AutomationId="BackButton"
                        AutomationProperties.ItemType="Navigation Button"/>

        <Image Grid.Row="3" Grid.Column="3" Grid.RowSpan="9" x:Name="IMG" HorizontalAlignment="Left" VerticalAlignment="Top"  />

        <TextBox x:Name="show" Grid.Row="12" Grid.Column="3" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="92" Width="626" FontSize="25" Grid.RowSpan="2" />
        <Button x:ConnectionId='1' Grid.Row="11" Grid.Column="1" x:Name="_save" Content="保存" HorizontalAlignment="Left" VerticalAlignment="Top"                     FontSize="25" Height="77" Margin="22,-3,0,-3" Width="211"/>
        <Button x:ConnectionId='2' Grid.Row="9" Grid.Column="5" x:Name="_fudiao" Content="浮 雕 效 果" HorizontalAlignment="Left"  VerticalAlignment="Top"                       FontSize="25" Height="81" Margin="-2,1,-3,0" Width="213" FontFamily="Mistral" Grid.RowSpan="2">
            <Button.Background>
                <ImageBrush ImageSource="Assets/b.png" Stretch="Fill"/>
            </Button.Background>
        </Button>
        <Button x:ConnectionId='3' Grid.Row="9" Grid.Column="1" x:Name="reset" Content="重置" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="-2.588,-0.158"                     FontSize="25" Height="74" Width="211" Margin="22,0,0,-3"/>
        <Button x:ConnectionId='4' Grid.Row="3" Grid.Column="5" x:Name="gray" Content="黑白效果" HorizontalAlignment="Left"  VerticalAlignment="Top" RenderTransformOrigin="0.3,-0.158"                    FontSize="25" Height="80" Margin="-1,0,-3,-3" Width="212">
            <Button.Background>
                <ImageBrush ImageSource="Assets/b.png" Stretch="Fill"/>
            </Button.Background>
        </Button>
        <Button x:ConnectionId='5' Grid.Row="5" Grid.Column="5" x:Name="_dipian" Content="底片效果" HorizontalAlignment="Left"  VerticalAlignment="Top" FontSize="25" RenderTransformOrigin="-0.304,0.346"                       Height="81" Margin="-2,0,-3,-3" Width="213">
            <Button.Background>
                <ImageBrush ImageSource="Assets/b.png" Stretch="Fill"/>
            </Button.Background>
        </Button>
        <Button x:ConnectionId='6' Grid.Row="7" Grid.Column="5" x:Name="meanFilter" Content="去噪效果" HorizontalAlignment="Left" VerticalAlignment="Top"                          FontSize="25" Height="80" Width="213" Margin="-2,-1,-3,-2">
            <Button.Background>
                <ImageBrush ImageSource="Assets/b.png" Stretch="Fill"/>
            </Button.Background>
        </Button>
        <Button x:ConnectionId='7' Grid.Row="1" Grid.Column="5" x:Name="gray2" Content="灰度效果" HorizontalAlignment="Left"  VerticalAlignment="Top" FontSize="25"                     Height="81" Margin="0,0,-3,-3" Width="211" RenderTransformOrigin="0.5,0.5">
            <Button.Background>
                <ImageBrush ImageSource="Assets/b.png" Stretch="Fill"/>
            </Button.Background>
        </Button>
        <Button x:ConnectionId='8' Grid.Row="11" Grid.Column="5" x:Name="neon" Content="霓虹效果" HorizontalAlignment="Left"  VerticalAlignment="Top" RenderTransformOrigin="-0.15,0.237" FontSize="25"                    Height="80" Margin="-1,0,-3,-3" Width="212">
            <Button.Background>
                <ImageBrush ImageSource="Assets/b.png" Stretch="Fill"/>
            </Button.Background>
        </Button>
        <Slider x:ConnectionId='9' Grid.Row="4" Grid.Column="1" x:Name="brightChange" HorizontalAlignment="Left" VerticalAlignment="Top" Width="198" RenderTransformOrigin="-0.12,0.8"                                          Value="50" Margin="25,-17,0,0" Grid.RowSpan="2" Height="70" Background="#297F8DE4" BorderBrush="#FF1805DC"/>
        <Slider x:ConnectionId='10' Grid.Row="5" Grid.Column="1" x:Name="contrastChange" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="198"                                            RenderTransformOrigin="0.44,0.383" Value="50" Height="40" Margin="25,51,0,0" Grid.RowSpan="2" Background="#296161D8" BorderBrush="#FF130CB0"/>
        <TextBlock Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" TextWrapping="Wrap" Text="亮度调节" VerticalAlignment="Top" Height="38" Width="156" RenderTransformOrigin="0.679,1.818" FontSize="35" Margin="33,0,0,0" Foreground="#FF101089" />
        <TextBlock Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="38" Width="190" RenderTransformOrigin="0.679,1.818" FontSize="35" Margin="33,10,0,0" Foreground="#FF101089" >
        	<Run Text="对比度"/>
        	<Run Text="调节"/>
        </TextBlock>
        <Button x:ConnectionId='11'  Grid.Row="13" Grid.Column="5" x:Name="woodCut" Content="木刻效果" HorizontalAlignment="Left" VerticalAlignment="Top" Height="74" Width="211" FontSize="25" RenderTransformOrigin="0.114,0.22"                       Margin="0,0,-3,-3">
            <Button.Background>
                <ImageBrush ImageSource="Assets/b.png" Stretch="Fill"/>
            </Button.Background>
        </Button>
        <Button x:ConnectionId='12' Grid.Row="12" Grid.Column="1" x:Name="share" Content="分享" HorizontalAlignment="Left"  VerticalAlignment="Top" FontSize="25" Width="211" Height="80"                     Margin="22,14,0,-2" Grid.RowSpan="2">
            <Button.Background>
                <ImageBrush ImageSource="Assets/b.png" Stretch="Fill"/>
            </Button.Background>
        </Button>
    </Grid>
</Page>

